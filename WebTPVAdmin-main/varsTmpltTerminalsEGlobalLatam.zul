                            <textbox id="varTxtLeyendaQPS" width="98%" value="Autorizado sin firma" constraint="no empty" maxlength="40"/>
                        </row>
                        <row>
                            <label value="Operadores"/>
                            <checkbox id="chckSolNumVend" checked="false"/>
                            <label value="Perfil Operativa:"/>
