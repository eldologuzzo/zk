                                    <hbox>
                                        <space/>
                                    </hbox>
                                    <button id="add" label="${c:l('BttnAgregar')}" image="/images/imgicons/icons/plus-circle.png"/>
                                    <space/>
                                    <button id="update" label="${c:l('BttnModificar')}" image="/images/imgicons/icons/pencil.png"/>
                                    <space/>
                                    <button id="bttnDeptoAltaMasiva" label="${c:l('BttnDeptoAltaMasiva')}" disabled="true" image="/images/imgicons/icons/notebook--plus.png"/>
                                    <space/>
                                    <button id="bttnLogTickets" label="Log Tickets" image="/images/imgicons/icons/application-detail.png" visible="false"/>
                                    <hbox>
                                        <space/>
                                    </hbox>
