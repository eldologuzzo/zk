                                <label value="${c:l('folio')}" style="font-size:100%;"/>
                                <textbox id="textBoxFolioTerminal" cols="15" value="" style="font-size:100%" width="98%" placeholder="Folio"/>
                                <label value="MerchantId:" style="font-size:100%;"/>
                                <textbox id="textBoxMerchantId" cols="15" value="" style="font-size:100%" width="98%" placeholder="AfiliaciÃ³n"/>
                                <cell colspan="2"  align="center">
                                <button id="btnBuscarTerminal" label="${c:l('BttnBuscar')}"
                                        style="font-size:100%; height: 80%; width: 80%" width="98%"
                                        image="/images/imgicons/icons/application-search-result.png"/>
                                </cell>
                            </row>
                            <row valign="top" spans="5,3" height="100%">
                                <groupbox style="border:0;">
                                    <listbox id="box" style="overflow:auto; white-space: nowrap;" fixedLayout="true" rows="12"
                                             selectedItem="@{win$composer.currents, converter=com.tpvs.tpvsadmin.zkutils.convert.selectItemsConverter}" multiple="true"
                                             checkmark="true" height="100%">
                                        <!-- mold="paging" pageSize="10"  -->
                                        <listhead sizable="true">
                                            <!-- <listheader label="${c:l('Terminal')}:" width="50px" sort="auto(idTerminal)"/>-->
                                            <listheader label="${c:l('Terminal')}:" width="17%"/>
                                            <listheader label="Folio:" width="8%"/>
                                            <listheader label="${c:l('VersionAnterior')}:" width="15%"/>
                                            <listheader label="${c:l('VersionActual')}:" width="15%"/>
                                            <listheader label="${c:l('Descargada')}:" width="11%"/>
                                            <listheader label="${c:l('VersionPendiente')}:" width="15%"/>
                                            <listheader label="${c:l('Intentos')}:" width="11%"/>
                                            <listheader label="TID:" width="8%"/>
                                        </listhead>
                                        <!-- <listitem self="@{each='Terminal'}" value="@{Terminal}">
                                            <listcell label="@{Terminal.idTerminal}"/>
                                            <listcell label="@{Terminal.oldVersion}"/>
                                            <listcell label="@{Terminal.idVersion}"/>
                                            <listcell label="@{Terminal.date, converter='com.tpvs.tpvsadmin.zkutils.convert.fechahoraVersionsConverter'}"/>
                                            <listcell label="@{Terminal.newVersion}"/>
                                            <listcell label="@{Terminal.Tries}"/>
                                        </listitem>-->
                                    </listbox>
                                    <paging id="pagTermApps" pageSize="12"/>
                                </groupbox>
                                <groupbox Style="border:0">
                                    <listbox id="box2" style="overflow:auto;font-size:8px;padding: 0px 0px;"
                                             fixedLayout="true" mold="paging" pageSize="6" rows="6"
                                             model="@{win$composer.allAppsVersions load-after='comboboxGroups.onSelect'}"
                                             selectedItem="@{win$composer.current6}" multiple="false" checkmark="true" height="280px">
                                        <listhead sizable="true">
                                            <listheader label="${c:l('Aplicacion')}:" width="16%" sort="auto(applications.application)"/>
                                            <listheader label="${c:l('Version')}:" width="16%" sort="auto(VersionsPK.idVersion)"/>
                                            <listheader label="${c:l('Comentarios')}:" width="68%"/>
                                        </listhead>
                                        <listitem self="@{each='AppVersion'}" value="@{AppVersion}">
                                            <listcell label="@{AppVersion.applications.application}"/>
                                            <listcell label="@{AppVersion.VersionsPK.idVersion}"/>
                                            <listcell label="@{AppVersion.Comments}"/>
                                        </listitem>
                                    </listbox>
                                    <vbox>
                                        <space/>
                                        <checkbox id="chkboxForceUpdateApp" label="${c:l('ForzarActualizacion')}" disabled="true" style="font-size:100%;"/>
                                        <space/>
                                    </vbox>
                                    <button id="bttnUpdate" label="${c:l('AsignarAplicaciones')}" disabled="true" image="/images/imgicons/icons/pencil.png"/>
                                    <space/>
                                    <button id="bttnDeny" label="${c:l('DenegarAplicaciones')}" image="/images/imgicons/icons/minus-circle.png"/>
                                    <hbox>
                                        <space/>    
                                    </hbox>
                                    <label id="lblResumenVersion" value="" style="font-size:80%;color:navy; font-style:normal;" multiline="true"/>
                                </groupbox>
                            </row>
                        </rows>
                    </grid>
                </window>
            </center>
            <south size="30px">
                <window id="windowWorkArea" onCreate="setLblVApp()">
                    <hlayout valign="middle">
                        <div hflex="1">
                            <label id="appverlbl" style="font-size:65%; color:#888; font-style:normal;background-color:#efefef;"/>
                        </div>
                        <label id="lblLeyenda" value=" " style="font-size:65%; color:#888; font-style:normal;background-color:#efefef;"/>
                    </hlayout>
                    <zscript>
                        public setLblVApp() {
                            appverlbl.setValue(com.tpvs.util.MyProperties.getPropiedad("vapp"));
                        }
                    </zscript>
                </window>
            </south>
        </borderlayout>
    </window>
</zk>
