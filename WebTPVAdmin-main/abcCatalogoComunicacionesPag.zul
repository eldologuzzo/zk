                                            <textbox id="puerto" width="100%" value="@{win$composer.currentComunicacion.puerto}" maxlength="5"/>
                                            <label value="Certificado SSL:" style="font-size:100%"/>
                                            <textbox id="certificadoSSL" width="100%" value="@{win$composer.currentComunicacion.certificadoSSL}" maxlength="25"/>
                                        </row>
                                        <row>
                                            <label value="C贸digo Ciudad:" style="font-size:100%"/>
                                            <textbox id="codciudad" width="100%" value="@{win$composer.currentComunicacion.codciudad}" maxlength="6"/>
                                        </row>
                                    </rows>
                                </grid>
                                <hbox>
                                    <space/>
                                </hbox>
                                <button id="bttnAdd" label="${c:l('BttnAgregar')}" image="images/imgicons/icons/plus-circle.png"/>
                                <space/>
                                <button id="bttnUpdate" label="${c:l('BttnModificar')}" image="images/imgicons/icons/pencil.png"/>
                                <space/>
                                <button id="bttnDelete" label="${c:l('BttnEliminar')}" image="images/imgicons/icons/minus-circle.png"/>
                                <space/>
                                <button id="bttnLimpiarCampos" label="LimpiarCampos" image="images/imgicons/icons/application-detail.png"/>
                                <!-- html><![CDATA[ <p></p> ]]></html -->
                                <div id="midiv">
                                    <label id="milabel" value="" style="font-size:65%;color:navy; font-style:normal;"/>
                                </div>
