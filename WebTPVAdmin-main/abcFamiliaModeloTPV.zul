                                            <listcell label="@{Familiatpv.nombre}"/>
                                            <listcell label="@{Familiatpv.descripcion}"/>
                                        </listitem>
                                    </listbox>
                                    <groupbox style="border:0">
                                        <grid style="border:0">
                                            <columns style="border:0">
                                                <column width="25%"/>
                                                <column width="75%"/>
                                            </columns>
                                            <rows>
                                                <row style="border:0">
                                                    <label value="Nombre:"/>
                                                    <textbox id="nombrefamilia" value="@{win$composer.currentFamiliatpv.nombre}" maxlength="20" width="98%"/> 
                                                </row>
                                                <row style="border:0">
                                                    <label value="Descripci贸n:"/>
                                                    <textbox id="descripcionfamilia" value="@{win$composer.currentFamiliatpv.descripcion}" maxlength="35" width="98%"/> 
                                                </row>
                                            </rows>
                                        </grid>
                                        <button id="bttnAddFamilia" label="${c:l('BttnAgregar')}" image="images/imgicons/icons/plus-circle.png"/>
                                        <button id="bttnUpdateFamilia" label="${c:l('BttnModificar')}" image="images/imgicons/icons/pencil.png" disabled="true"/>
                                        <button id="bttnDeleteFamilia" label="${c:l('BttnEliminar')}" image="images/imgicons/icons/minus-circle.png" disabled="true"/>
                                        <button id="bttnLimpiarCamposFamilia" label="LimpiarCampos" image="images/application-detail.png"/>
                                    </groupbox>
                                </row>
                            </rows>
                        </grid>
                    </groupbox>
                    <groupbox style="border:0" mold="3d" closable="false" height="50%">
                        <caption label="Modelo Terminales"/>
                        <grid style="border:0">
                            <columns style="border:0">
                                <column width="45%" valign="top"/>
                                <column width="35%" valign="top"/>
                                <column width="20%" valign="top"/>
                            </columns>
                            <rows>
                                <row style="border:0">
                                    <listbox id="boxModelo" style="overflow:auto" selectedItem="@{win$composer.currentModelotpv}" height="100%"
                                             mold="paging" pageSize="5" rows="5"
                                             model="@{win$composer.allModelotpv, load-after='bttnAddModelo.onClick, bttnUpdateModelo.onClick, bttnDeleteModelo.onClick, bttnUpdateFamilia.onClick, bttnDeleteFamilia.onClick, bttnAddModeloFam.onClick, bttnDeleteModeloFam.onClick '}">
                                        <listhead sizable="true">
                                            <listheader label="Id:" width="10%"/>
                                            <listheader label="Nombre:" width="26%"/>
                                            <listheader label="Descripci贸n:" width="33%"/>
                                            <listheader label="Familia:" width="33%"/>
                                        </listhead>
                                        <listitem self="@{each='Modelotpv'}" value="@{Modelotpv}">
                                            <listcell label="@{Modelotpv.idmodelotpv}"/>
                                            <listcell label="@{Modelotpv.nombre}"/>
                                            <listcell label="@{Modelotpv.descripcion}"/>
                                            <listcell label="@{Modelotpv.idfamiliatpv.nombre}"/>
                                        </listitem>
                                    </listbox>
                                    <groupbox style="border:0">
                                        <grid id="gridModelos" style="border:0" visible="false">
                                            <columns style="border:0">
                                                <column width="25%"/>
                                                <column width="75%"/>
                                            </columns>
                                            <rows>
                                                <row style="border:0">
                                                    <label value="Nombre:"/>
                                                    <textbox id="nombremodelo" value="@{win$composer.currentModelotpv.nombre}" maxlength="20" width="98%"/> 
                                                </row>
                                                <row style="border:0">
                                                    <label value="Descripci贸n:"/>
                                                    <textbox id="descripcionmodelo" value="@{win$composer.currentModelotpv.descripcion}" maxlength="35" width="98%"/> 
                                                </row>
                                            </rows>
                                        </grid>
                                        <button id="bttnAddModelo" label="${c:l('BttnAgregar')}" image="images/imgicons/icons/plus-circle.png"/>
                                        <button id="bttnUpdateModelo" label="${c:l('BttnModificar')}" image="images/imgicons/icons/pencil.png" disabled="true"/>
                                        <button id="bttnDeleteModelo" label="${c:l('BttnEliminar')}" image="images/imgicons/icons/minus-circle.png" disabled="true"/>
                                        <button id="bttnLimpiarCamposModelo" label="LimpiarCampos" image="images/imgicons/icons/application-detail.png"/>
                                        <vbox>
                                            <space/>
                                            <space/>
                                        </vbox>
                                        <grid id="gridFamiliaModelo" style="border:0">
                                            <columns style="border:0">
                                                <column width="25%"/>
                                                <column width="75%"/>
                                            </columns>
                                            <rows>
                                                <row style="border:0">
                                                    <label value="Familia Terminal:"/>
                                                    <combobox id="comboboxFamilia" cols="22" readonly="true" selectedItem="@{win$composer.currentFamiliaModelo}"
                                                              model="@{win$composer.allFamiliatpv, load-after='bttnAddFamilia.onClick, bttnUpdateFamilia.onClick, bttnDeleteFamilia.onClick'}"
                                                              style="font-size:10px">
                                                        <comboitem self="@{each=currentFamiliaModelo}" label="@{currentFamiliaModelo.nombre}" 
                                                                   value="@{currentFamiliaModelo}" description="@{currentFamiliaModelo.descripcion}"/>
                                                    </combobox>
                                                </row>
                                            </rows>
                                        </grid>
                                        <button id="bttnAddModeloFam" label="${c:l('BttnAgregar')}" image="images/imgicons/icons/plus-circle.png" disabled="true"/>
                                        <button id="bttnDeleteModeloFam" label="${c:l('BttnEliminar')}" image="images/imgicons/icons/minus-circle.png" disabled="true"/>
                                    </groupbox>
                                    <listbox id="lstFamiliasAsignadas" rows="6" height="80%" selectedItem="@{win$composer.currentFamiliaModelo}"
                                        model="@{win$composer.allModeloFamilias, load-after='boxModelo.onSelect, bttnAddModeloFam.onClick, bttnDeleteModeloFam.onClick'}">
                                        <listitem self="@{each='theFamilyTpv'}" value="@{theFamilyTpv}">
                                            <listcell label="@{theFamilyTpv.nombre}"/>
                                        </listitem>
                                    </listbox>
                                </row>
                            </rows>
                        </grid>
                    </groupbox>
                    <hbox>
                        <vbox>
