                        </div>
                    </west>
                    <center border="none">
                        <div style="background:#045FB4" vflex="1">
                            <zscript>
                                String stImgHeader = (String)Sessions.getCurrent().getAttribute("imgHeader");
                                String stFrmImgHeader = (String)Sessions.getCurrent().getAttribute("imgFrmHeader");
                            </zscript>
                            <image src="images/imgheaders/${stImgHeader}-imgheader-applications.${stFrmImgHeader}"/>
                        </div>
                    </center>
                </borderlayout>
            </north>
            <west id="menuOpciones" title=" " size="11%" flex="true" maxsize="140" splittable="false" collapsible="true" open="false">
                <include src="/menugral.zul" progressing="true"/>
            </west>
            <center>
                <window id="win" style="overflow:auto" border="normal" apply="com.tpvs.tpvsadmin.zkutils.StoresControllerPag" height="100%">
                    <!-- multiple="true" mold="paging" pageSize="5" rows="7" -->
                    <label value="${c:l('Grupo')}:" style="font-size:100%"/>
                    <space/>
                    <combobox id="comboboxGroups" cols="22" readonly="true" selectedItem="@{win$composer.current2}"
                              model="@{win$composer.allGroups}">
                        <comboitem self="@{each=GroupsChains}" 
                                   label="@{GroupsChains.groupName}"
                                   value="@{GroupsChains.idGroup}"
                                   description="@{GroupsChains.contact}"/>
                    </combobox>
                    <space/>
                    <label value="${c:l('Cadena')}:" style="font-size:100%"/>
                    <space/>
                    <combobox id="comboboxChains" cols="22" readonly="true" selectedItem="@{win$composer.current3}"
                              model="@{win$composer.allChains, load-after='comboboxGroups.onSelect'}">
                        <comboitem self="@{each=GroupsChainsStore}"
                                   label="@{GroupsChainsStore.chain}"
                                   value="@{GroupsChainsStore.idChain}"
                                   description="@{GroupsChainsStore.contact}"/>
                    </combobox>
                    <space/>
                    <label value="${c:l('Tienda')}:" style="font-size:100%"/>
