                                        <button id="bttnLastFileFolios" label="RespFolios" image="/images/imgicons/notebook-share.png" visible="false"/>
                                        <button id="bttnUpdateDepto" label="${c:l('BttnUpdateDepto')}" disabled="true" image="/images/plus-circle.png"/>
                                    </hbox>
                                </groupbox>
                                <groupbox id="gb1" mold="3d">
                                    <caption label="${c:l('IngreseDatos')}:"/>
                                    <grid>
                                        <columns>
                                            <column width="30%"/>
                                            <column width="70%"/>
                                        </columns>
                                        <rows>
                                            <row>
                                                <label value="Proveedor:" style="font-size:100%"/>
                                                <combobox id="comboboxProveedor" width="100%" readonly="true" model="@{win$composer.allProveedores}"
                                                          selectedItem="@{win$composer.currentProveedor}" style="font-size:10px">
                                                    <comboitem self="@{each=Proveedor}" label="@{Proveedor.nombre}" 
                                                               value="@{Proveedor.idProveedor}" description="@{Proveedor.contacto}"/>
                                                </combobox>
                                            </row>
                                            <row>
                                                <label value="${c:l('Departamento')}:" style="font-size:100%"/>
                                                <textbox id="departmentName" width="100%" value="@{win$composer.current.department}" constraint="no empty"/>
                                            </row>
                                            <row>
                                                <label value="${c:l('Contacto')}:" style="font-size:100%"/>
                                                <textbox id="contact" width="100%" value="@{win$composer.current.contact}" constraint="no empty" maxlength="45"/>
                                            </row>
                                            <row>
                                                <label value="${c:l('Telefono')}:" style="font-size:100%"/>
                                                <textbox id="phone" width="100%" value="@{win$composer.current.phone}" />
                                            </row>
                                            <row>
                                                <label value="${c:l('Afiliacion')}:" style="font-size:100%"/>
                                                <textbox id="noAfiliacion" width="100%" value="@{win$composer.current.noAfiliacion}" constraint="no empty" maxlength="15"/>
                                            </row>
                                            <row>
                                                <label id="lblGenerico" value="" style="font-size:100%"/>
                                                <label id="lblGenericoValue" value="" style="font-size:100%"/>
                                            </row>
                                            <row>
                                                <label value="${c:l('CodigoPostal')}:" style="font-size:100%"/>
                                                <groupbox contentStyle="border:0">
                                                    <textbox id="codigoPostal" width="75%" value="@{win$composer.current.cpasentamientos.CpasentamientosPK.codigoPostal}" readonly="true" />
                                                    <space width="5px"/>
                                                    <button id="bttnCodigoPostal" image="/images/imgicons/icons/application-detail.png"/>
                                                </groupbox>
                                            </row>
                                            <row>
                                                <label value="${c:l('Estado')}:" style="font-size:100%"/>
                                                <textbox id="estado" width="100%" value="@{win$composer.current.cpasentamientos.cpmunicipios.cpestados.entidadFederativa}" readonly="true"/>
                                            </row>
                                            <row>
                                                <label value="${c:l('Ciudad')}:" style="font-size:100%"/>
                                                <textbox id="ciudad" width="100%" value="@{win$composer.current.cpasentamientos.cpmunicipios.nombreMunicipio}" readonly="true"/>
                                            </row>
                                            <row>
                                                <label value="Colonia:" style="font-size:100%"/>
                                                <textbox id="colonia" width="100%" value="@{win$composer.current.cpasentamientos.nombreAsentamiento}" readonly="true"/>
                                            </row>
                                            <row>
                                                <label value="Asesor:" style="font-size:100%"/>
                                                <combobox id="comboboxAsesores" width="100%" autocomplete="true" model="@{win$composer.allAsesores}" 
                                                          selectedItem="@{win$composer.currentAsesorComercial}" style="font-size:10px" readonly="true">
                                                    <comboitem self="@{each=Asesor}" label="@{Asesor.nombre}"
                                                               value="@{Asesor}" description="@{Asesor.correo}"/>
                                                </combobox>
                                            </row>
                                        </rows>
                                    </grid>
                                    <!--<hbox>
                                        <vbox width="100px">Id Department:</vbox>
                                        <label id="idDeparment" value="@{win$composer.current.idDepartment}" />
