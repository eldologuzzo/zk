<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?page title="Aurora" ?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit"?>
<zk xmlns="http://www.zkoss.org/2005/zul">
    <script type="text/javascript">
        <![CDATA[
		zk.afterLoad("zul.wgt", function () {
			zul.wgt.Label.prototype.getEncodedText = function () {
				return zUtl.encodeXML(this._value, {multiline:this._multiline,pre:this._pre, maxlength: this._maxlength}).replace(/_r_n/g, "<br />");
			}
		});
        ]]>
    </script>
    <html><![CDATA[ <link rel="stylesheet" href="othercss/tpvsadmin.css" type="text/css" /> ]]></html>
    <window id="myFirstWindow" mode="highlighted" width="1265px" height="575px">
        <borderlayout id="blayout1">
            <north size="35%">
                <window id="menuTopMenu">
                    <include src="/menugral.zul" progressing="true"/>
                    <zscript>
                        String stImgHeader = (String)Sessions.getCurrent().getAttribute("imgHeader");
                        String stFrmImgHeader = (String)Sessions.getCurrent().getAttribute("imgFrmHeader");
                    </zscript>
                    <image src="images/imgheaders/${stImgHeader}-imgheader-applications.${stFrmImgHeader}"/>
                </window>
            </north>
            <south size="65%">
                <window id="win" height="100%" contentStyle="overflow:auto; border:0" style="overflow:auto" border="normal" apply="com.tpvs.tpvsadmin.zkutils.ChckVarCPController">
                    <div align="center" height="100%"> <!-- height="350px" style="border:1px solid black;overflow:auto;" -->
                        <groupbox id="gb1" mold="3d" width="75%" height="100%" contentStyle="overflow:auto">
                            <caption label="Verificación telefonos y #CP"/>
                            <grid>
                                <columns>
                                    <column width="30%" align="left"/>
                                    <column width="70%" align="center"/>
                                </columns>
                                <rows>
                                    <row id="txtCredencial">
                                        <label id="lblCredencial" value="Escribe la credencial:"/>
                                        <groupbox style="border:0">
                                            <textbox id="txtBoxCredencial" type="password" value="admin" constraint="no empty"/>
                                            <button id="bttnCredencial" label="${c:l('Entrar')}"/>
                                        </groupbox>
                                    </row>
                                    <row id="rowDatos" visible="false">
                                        <groupbox style="border:0">
                                            <hbox width="100px">${c:l('Grupo')}:</hbox>
                                            <combobox id="comboboxGroups" cols="35" readonly="true" 
                                                      model="@{win$composer.allGroups}" 
                                                      selectedItem="@{win$composer.currentGroup}">
                                                <comboitem self="@{each=Groups}" label="@{Groups.groupName}"
                                                           value="@{Groups.idGroup}" description="@{Groups.contact}"/>
                                            </combobox>
                                           
                                            <hbox width="100px">${c:l('Cadena')}:</hbox>
                                            <combobox id="comboboxChains" cols="35" readonly="true"
                                                      model="@{win$composer.allChains, load-after='comboboxGroups.onSelect'}"
                                                      selectedItem="@{win$composer.currentChain}">
                                                <comboitem self="@{each=GroupsChains}" label="@{GroupsChains.chain}"
                                                           value="@{GroupsChains.idChain}" description="@{GroupsChains.contact}"/>
                                            </combobox>
                                        </groupbox>
                                        <groupbox style="border:0">
                                            <hbox>
                                                <label id="lblProcCP" multiline="true"/>
                                                <space/>
                                                <label id="lblProcCPbyFile" multiline="true"/>
                                            </hbox>
                                            <space/>
                                            <hbox>
                                                <button id="bttnProcCP" label="Verificar Teléfonos." image="/images/plus-circle.png" />
                                                <space/>
                                                <button id="bttnProcCPbyFile" label="${c:l('BttnAgregarArchivo')}" image="/images/plus-circle.png" disabled="true"/>
                                                <space/>
                                                <button id="bttnRefreshLabels" label="Refresh" image="/images/plus-circle.png" disabled="true"/>
                                            </hbox>
                                        </groupbox>
                                    </row>
                                    <row id="rowVarsDialUp" visible="false">  <!--spans="2"-->
                                        <button id="bttnProcVarsDialUp" label="Colocar Variables DialUp." image="/images/plus-circle.png" disabled="true"/>
                                        <label id="lblProcVarsDialUp" multiline="true"/>
                                    </row>
                                    <row id="rowVarsLealtad" visible="false">  <!--spans="2"-->
                                        <button id="bttnProcShowVarsLealtad" label="Status Variables Lealtad." image="/images/plus-circle.png"/>
                                        <label id="lblProcShowVarsLealtad" multiline="true"/>
                                    </row>
                                    <row id="rowFileLealtad" visible="false">
                                        <button id="bttnFileLealtad" label="Comercios Con Lealtad Activo." image="/images/plus-circle.png"/>
                                    </row>
                                    <row id="rowRepOptBlue" visible="false">
                                        <button id="bttnRepOptBlue" label="Reporte OptBlue." image="/images/plus-circle.png"/>
                                        <vbox align="center">
                                            <label id="lblProcRepOptBlue" value=""/>
                                            <space/>
                                            <button id="bttnLastRepOptBlue" visible="false"/>
                                        </vbox>
                                    </row>
                                    <row id="rowQueryVarsDepartments" visible="false">
                                        <button id="bttnVarsDepartments" label="QueryVarsDepartment" image="/images/plus-circle.png"/>
                                    </row>
                                </rows>
                            </grid>
                            <html><![CDATA[ <p></p> ]]></html>
                            <div id="midiv" align="left">
                                <label id="milabel" value="" style="font-size:65%;color:navy; font-style:normal;"/>
                            </div>
                        </groupbox>
                    </div>
                </window>
            </south>
        </borderlayout>
    </window>
</zk>