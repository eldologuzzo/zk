<?xml version="1.0" encoding="UTF-8"?>

<zk>
    <device-config>
        <device-type>ajax</device-type>
    </device-config>
    <!--
    Se retira porque afecta/deshabilita el fileupload, cuando se encuentra en true.
    Se coloca en false por tema en ventanas modal y de referencia este link.
    http://forum.zkoss.org/question/84115/understanding-windowdomodal/
    -->
    <system-config>
        <disable-event-thread>false</disable-event-thread>
    </system-config>

    <session-config>
        <device-type>ajax</device-type>
        <timeout-message>Session timeout. Please reload.</timeout-message>
        <!-- <timeout-message>label:timeout</timeout-message> -->
        <session-timeout>900</session-timeout>
        <automatic-timeout>true</automatic-timeout>
        <timeout-uri>/index.zul</timeout-uri>
        <timer-keep-alive>false</timer-keep-alive>
        <max-desktops-per-session>1</max-desktops-per-session>
        <max-requests-per-session>10</max-requests-per-session>
        <max-pushes-per-session>5</max-pushes-per-session>
        <!--<session-max>4096</session-max>-->
    </session-config>
    
    <library-property>
        <name>org.zkoss.zul.nativebar</name>
        <value>true</value>
    </library-property>
<!--    <session-config>
	<device-type>ajax</device-type>
