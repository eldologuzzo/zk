                                <groupbox id="gb1" mold="3d" height="340px" contentStyle="overflow:auto;" closable="false">
                                <caption label="${c:l('IngreseDatos')}:"/>
                                <grid>
                                    <columns>
                                        <column width="20%"/>
                                        <column width="30%"/>
                                        <column width="20%"/>
                                        <column width="30%"/>
                                    </columns>
                                    <rows>
                                        <row>
                                            <label value="Ciudad:" style="font-size:100%"/>
                                            <textbox id="ciudad" width="100%" value="@{win$composer.currentComunicacion.ciudad}" maxlength="20"/> 
