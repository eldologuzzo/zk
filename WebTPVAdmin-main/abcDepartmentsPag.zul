                                <label value="${c:l('folio')}:" style="font-size:100%;"/>
                                <textbox id="textBoxFolio" width="100%" value=""/>
                            </row>
                        </rows>
                    </grid>
                    <grid style="border:0">
                        <columns>
                            <column width="70%"/>
                            <column width="30%"/>
                        </columns>
                        <rows style="vertical-align: top">
                            <row style="border:0">
                                <groupbox contentStyle="border:0">
                                    <listbox id="box" style="overflow:auto; white-space: nowrap;" fixedLayout="true" rows="12" selectedItem="@{win$composer.current}" 
                                             height="100%">
                                        <listhead sizable="true">
                                            <listheader label="${c:l('Tienda')}:" width="25%"/>
