                    </center>
                </borderlayout>
            </north>
            <west id="menuOpciones" title=" " size="11%" flex="true" maxsize="140" splittable="false" collapsible="true" open="false">
                <include src="/menugral.zul" progressing="true"/>
            </west>
            <center>
                <window id="win" style="overflow:auto" border="normal" apply="com.tpvs.tpvsadmin.zkutils.FamiliaModeloTPVController" height="100%">
                    <!-- multiple="true" mold="paging" pageSize="5" rows="7" -->
                    <groupbox style="border:0" mold="3d" closable="false" height="50%">
                        <caption label="Familia Terminales"/>
                        <grid style="border:0">
                            <columns style="border:0">
                                <column width="65%"/>
                                <column width="35%" valign="top"/>
                            </columns>
                            <rows>
                                <row style="border:0">
                                    <listbox id="boxFamilia" style="overflow:auto" selectedItem="@{win$composer.currentFamiliatpv}" height="100%"
                                             mold="paging" pageSize="5" rows="5"
                                             model="@{win$composer.allFamiliatpv, load-after='bttnAddFamilia.onClick, bttnUpdateFamilia.onClick, bttnDeleteFamilia.onClick'}">
                                        <listhead sizable="true">
