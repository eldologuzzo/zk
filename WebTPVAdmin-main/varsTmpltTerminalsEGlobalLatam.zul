<!--<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit"?>-->
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" arg0="./winPopUp55"?>
<zk xmlns="http://www.zkoss.org/2005/zul">
    <window id="winPopUp55" title="${c:l('BttnVarsTmpltTerminal')}" style="overflow:auto" border="normal" width="90%" height="45%" closable="true"
    contentStyle="overflow:auto" apply="com.tpvs.tpvsadmin.zkutils.varsTmpltTerminalsControllerEGlobalLatam">
        <hbox width="100%">
            <groupbox id="gb111" mold="3d" width="100%">
                <caption label="${c:l('IngreseDatos')}:"/>
               <grid>
                   <columns>
                       <column width="20%" label="Variable"/>
                       <column width="30%" label="Valor"/>
                       <column width="20%" label="Variable"/>
                       <column width="30%" label="Valor"/>
                   </columns>
                    <rows>
                        <row>
                            <label value="NÃºmero de Serie:"/>
