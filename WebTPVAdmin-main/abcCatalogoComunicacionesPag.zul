                                <groupbox style="border:0">
                                    <listbox id="box" style="overflow:auto" rows="14" selectedItem="@{win$composer.currentComunicacion}" height="100%">
                                        <listhead sizable="true">
                                            <listheader label="Ciudad:" width="16%"/>
                                            <listheader label="Tel. 1 Txs.:" width="14%"/>
