                        </row>
                    </rows>
                </grid>
                <space/>
                <space/>
                <hbox width="100%">
                    <button id="bttnSaveVarsPopUp" label="${c:l('BttnSalvar')}" image="/images/save.png"/>
                    <button id="CerrarPopUp11" label="${c:l('BttnCerrar')}" image="/images/cross-circle.png" onClick="winPopUp55.detach();"/>
                    <button id="bttnCheckPerfil" label="Check Perfil" image="images/application-detail.png" disabled="true"/>
                </hbox>
            </groupbox>
        </hbox>
